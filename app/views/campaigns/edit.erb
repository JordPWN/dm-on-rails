<div class="container">
  <div class="row">
    <div class="col-sm-10 col-lg-8 col-sm-offset-1 col-lg-offset-2">
      <h1>Edit Campaign</h1>
      <hr>
      <form id="edit-campaign-form" method="post" action="/campaigns/<%=@campaign.id%>/edit"> <!-- Find campaign ID -->
        <!-- campaign title -->
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Title" value= "<%= @campaign.title %>">
        </div>

        <!-- beats list -->
        <div id="beats-list">      
          <% @campaign.beats.each do |load_beat| %>
          <div class="form-group">
              <label for="beat-<%load_beat.ordinance%>">Beat <%= load_beat.ordinance + 1 %></label>
              <div>

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                  <li role="presentation" class="active"><a href="#edit1" aria-controls="home" role="tab" data-toggle="tab">Edit</a></li>
                  <li role="presentation">
                    <a href="#preview1" aria-controls="profile" role="tab" data-toggle="tab" data-role="preview">Preview</a>
                  </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                  <div role="tabpanel" class="tab-pane active" id="edit1">
                    <textarea id="beat-<%load_beat.ordinance%>" class="form-control" rows="3" name="beats[]"><%= load_beat.content%></textarea>
                  </div>
                  <div role="tabpanel" class="tab-pane" id="preview1">
                    <div></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- save button -->
        <div class="form-group">
          <a href="" class="new-beat-btn"><span class="glyphicon glyphicon-plus"></span></a>
          <button type="submit" class="btn btn-default pull-right">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/template" id="beat-template">
  <div class="form-group">
    <label for="beat-{{id}}">Beat {{id}}</label>
    <div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#edit{{id}}" aria-controls="home" role="tab" data-toggle="tab">Edit</a>
        </li>
        <li role="presentation">
          <a href="#preview{{id}}" aria-controls="profile" role="tab" data-toggle="tab" data-role="preview">Preview</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="edit{{id}}">
          <textarea id="beat-{{id}}" class="form-control" rows="3" name="beats[]"></textarea>
        </div>
        <div role="tabpanel" class="tab-pane" id="preview{{id}}">
          <div></div>
        </div>
      </div>

    </div>
  </div>
</script>