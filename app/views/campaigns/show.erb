<div class="campaign-banner">
  <img class="campaign-banner-img" src="http://placehold.it/1200x600">
  <div class="container campaign-banner-top">
    <div class="row">
      <div class="col-lg-12">
        <div class="campaign-banner-title">
          <h1><%=  @campaign.title %></h1>
        </div>
        <div class="campaign-banner-description">
          <h4><%=  @campaign.description %></h4>
            <fieldset class="rating">
<!--                   <legend>Please rate:</legend> -->
              <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="Rocks!">5 stars</label>
              <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="Pretty good">4 stars</label>
              <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="Meh">3 stars</label>
              <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
              <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="Sucks big time">1 star</label>
              
            </fieldset>
        </div>
      </div>
    </div>
  </div>

  <div class="container campaign-banner-bottom">
    <div class="row">
      <div class="col-lg-12">
        <!-- start/resume button -->
        <div class="campaign-banner-button">
          <a class="btn btn-default btn-lg" href="/campaigns/<%= @campaign.id %>/play" role="button">Start Campaign</a>
        </div>
        <!-- copy button -->
        <form action="/campaigns/<%= @campaign.id %>/copy" method="post" class="campaign-copy-button">
          <div>
            <a class="btn btn-default btn-lg" name="copy_submit" input type="submit" value="">Copy Campaign</a>
          </div>
        </form>
        <!-- edit button -->
        <% if @user.id == @campaign.user_id %>
        <div class="campaign-edit-button">
          <a class="btn btn-default btn-lg" href="/campaigns/<%= @campaign.id %>/edit" role="button">Edit Campaign</a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
