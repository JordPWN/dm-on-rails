<div class="campaign-banner">
  <img class="campaign-banner-img" src="http://placehold.it/1200x300">
  <div class="campaign-banner-title">
    <h1><%=  @campaign.title %></h1>
  </div>
  <div class="campaign-banner-button">
    <a class="btn btn-success btn-lg" href="/campaigns/<%= @campaign.id %>/play" role="button">Start Campaign</a>
  </div>
  <div class="campaign-banner-description">
    <h1><%=  @campaign.description %></h1>
  </div>
</div>