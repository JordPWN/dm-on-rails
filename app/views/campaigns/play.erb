<% @title = @campaign.title %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-lg-8 col-sm-offset-1 col-lg-offset-2">
      <div class="well">
      <form>
        <input id="first-beat" type="hidden" value="<%= @my_beat %>">

          <div id="beats-<%= @my_beat %>" class="md-preview">
            <%= Markdown.new(@campaign.beats.find_by(ordinance: @my_beat).content).to_html.html_safe %>
          </div>

          <% @campaign.beats.each do |x| %>
            <div id="beats-<%= x.ordinance %>" class="md-preview" style="display: none">
              <%= Markdown.new(x.content).to_html.html_safe %>
            </div>
            
          <% end %>
          
          <%= Beat.find(@game.beats.find_by(campaign_id: @campaign.id)).ordinance %>
      </div>
    </div>
  </div>
</div>

<nav class="game-nav navbar navbar-default navbar-fixed-bottom">
  <div class="">
    <div class="col-xs-4">
      <button class="btn btn-default prev-beat">PREV</button>
    </div>
    <div class="col-xs-4">
      <button class="btn btn-default">EXIT</button>
    </div>
    <div class="col-xs-4">
        <button class="btn btn-default next-beat" data-game="123">NEXT</button>
    </div>
  </div>
</nav>