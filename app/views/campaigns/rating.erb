<div class="campaign-banner">
  <div class="campaign-banner-overlay"></div>
  <img class="campaign-banner-img" src="<%= @campaign.url %>"alt="#">
  <div class="container campaign-banner-top">
  <form method="post" action="/games/rating/save">
    <div class="row">
      <div class="col-lg-12">
        <div class="campaign-banner-title">
          <h1>Rate: <%=  @campaign.title %></h1>
        </div>
        <div class="campaign-banner-description">
          <h4><%=  @campaign.description %></h4>
        </div>
          <div class="stars">
          <input class="star star-5" value="5" data-game="<%= @game.id %>" id="star-5" type="radio" name="star"/>
          <label class="star star-5" for="star-5"></label>
         
          <input class="star star-4" value="4" data-game="<%= @game.id %>" id="star-4" type="radio" name="star"/>
          <label class="star star-4" for="star-4"></label>
         
          <input class="star star-3" value="3" data-game="<%= @game.id %>" id="star-3" type="radio" name="star"/>
          <label class="star star-3" for="star-3"></label>
          
          <input class="star star-2" value="2" data-game="<%= @game.id %>" id="star-2" type="radio" name="star"/>
          <label class="star star-2" for="star-2"></label>
          
          <input class="star star-1" value="1" data-game="<%= @game.id %>"id="star-1" type="radio" name="star"/>
          <label class="star star-1" for="star-1"></label>
      </div>
    </div>
  </div>
    <div class="form-group"> 
      <input type="hidden" value="<%= @game.id %>" name="game-id">
      <button type="submit" class="btn btn-default pull-right" data-rating="" data-game="<%= @game.id %>" id="save">Save</button>
      <button type="button" class="btn btn-default pull-right" id="skip">Skip</button>
    </div>
    </form>
  </div>
</div>

